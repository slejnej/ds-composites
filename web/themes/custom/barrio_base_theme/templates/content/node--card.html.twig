{% extends '@cards_nugget/card.html.twig' %}

{%
  set classes = [
  'node--type--' ~ node.bundle|clean_class,
  view_mode ? 'node--view-mode--' ~ view_mode|clean_class,
  not node.isPublished() ? 'node--unpublished',
  'card',
  'h-100',
  'd-flex',
  'justify-content-between',
  'overflow-hidden'
]
%}

{% set link = url('entity.node.canonical', {'node': node.id}) %}
{% set button_text = drupal_config('remora_core.remora_settings', 'card_button_text') %}
{% set display_title = node.field_alternative_title.value|default(node.title.value) %}
{% set image = node.field_image.entity.field_media_image.entity.uri.value %}
{% set summary = node.field_summary.value %}
{% set id = node.id %}
