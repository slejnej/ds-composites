<article{{ attributes.addClass('profile') }}>
  {% block user_content %}
    {% if content %}
      <div class="container-xxl palette-default-bg d-flex flex-column flex-md-row py-5 my-4">

        {% block user_info %}
          <div class="user-info d-flex flex-column col-md-6">
            <h1 class="mb-4">{{ user.name.0.value }}</h1>
            <div>{{ content.member_for }}</div>
            <div><h4 class="label">Email: </h4>{{ user.mail.0.value }}</div>
          </div>
        {% endblock %}

      </div>
    {% endif %}
  {% endblock%}
</article>
