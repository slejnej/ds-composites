{% block card_content %}
  <div class="card-body d-flex flex-column justify-content-between">

    {% block card_body %}
      <div class="card-body-wrapper">
        <div class="card-text-wrapper">
          {% block card_title %}
            <span id="card-title-{{ id }}" class="h4 card-title">{{ display_title|raw }}</span>
          {% endblock %}

          {% block card_text %}
            {% if summary %}
              <span class="card-text">{{ summary|raw }}</span>
            {% endif %}
          {% endblock %}

        </div>
      </div>
    {% endblock %}

    {% block card_button %}
      {% if link %}
        <a href="{{ link }}"
           class="btn btn-outline-primary btn-block {% if button_text is empty %} btn-stretched-hidden {% endif %} m-0 w-100 stretched-link"
            {% if button_text is empty %} aria-labelledby="card-title-{{ id }}" {% endif %}>{{ button_text }}</a>
      {% endif %}
    {% endblock %}

  </div>
{% endblock %}
