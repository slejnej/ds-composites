{% block field %}

  {%
    set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
    label_display == 'inline' ? 'clearfix',
  ] %}

  {% block field_content_wrapper %}

    {% if multiple %}
      <div{{ attributes.addClass(classes, 'field__items h-100') }} id="banners">
    {% endif %}

    {% block field_content %}
      {% for item in items %}
        <div{{ item.attributes.addClass('field__item h-100 banner d-none') }}>{{ item.content }}</div>
      {% endfor %}
    {% endblock %}

    {% if multiple %}
      </div>
    {% endif %}

  {% endblock %}

{% endblock %}
